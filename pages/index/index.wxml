<!--index.wxml-->
<view class="container">
  <view  bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
  <button bindtap='swiper'>swiper</button>
  <button bindtap='form'>form</button>
  <button bindtap='form2'>form2</button>
  <button bindtap='form3'>form3</button>
  <button bindtap='request'>request</button>
  <button bindtap='socket'>socket</button>
  <button bindtap='images'>images</button>
  <button bindtap='location'>location</button>
  <button bindtap='toastAndmodal'>toastAndmodal</button>
</view>
